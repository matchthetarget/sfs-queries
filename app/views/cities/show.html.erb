<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      City #<%= @city.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/cities" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @city.name %>
      </dd>

      <dt>
        Number of venues
      </dt>
      <dd>
        <%= Venue.where({ :city_id => @city.id }).count %> 
      </dd>

    </dl>
  </div>
</div>

<hr>

<h2>Venues</h2>
<% venues = Venue.where({ :city_id => @city.id }) %>
<ul>
  <% venues.each do |venue| %>
    <li>
      <a href="/venues/<%= venue.id %>"><%= venue.name %></a>
    </li>
  <% end %>
</ul>
