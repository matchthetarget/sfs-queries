<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all cities
    </h1>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table" border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
        </th>
      </tr>

      <% @cities.each do |city| %>
      <tr>
        <td>
          <%= city.id %>
        </td>

        <td>
          <%= city.name %>
        </td>

        <td>
          <a href="/cities/<%= city.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
